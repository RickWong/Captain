{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext",
    "skipLibCheck": true,
    "allowJs": false,
    "inlineSources": true,
    "outDir": "build/",
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./src/"
  },
  "include": ["./src/**/*"]
}
