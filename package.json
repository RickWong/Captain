{
  "private": true,
  "license": "UNLICENSED",
  "name": "captain",
  "version": "10.0.0",
  "description": "Docker menubar",
  "main": "./dist/main/index.js",
  "author": "Rick Wong <tangos_erasure0x@icloud.com>",
  "scripts": {
    "preinstall": "git submodule update --init --recursive",
    "clean": "rm -rf dist/ && electron-snowpack clean",
    "watch": "env NODE_ENV=development DEBUG=* electron-snowpack dev -- --inspect=9991",
    "prettier": "find ./ -type f \\( -iname \\*.js -o -iname \\*.json -o -iname \\*.ts -o -iname \\*.css \\) | grep -v logs/ | grep -v dist/ | grep -v node_modules/ | xargs prettier --write",
    "typecheck": "tsc --noEmit --pretty",
    "build": "yarn && yarn clean && yarn prettier && yarn typecheck && electron-snowpack build",
    "start": "yarn build && env NODE_ENV=production DEBUG=captain* electron ./",
    "package": "yarn build && export CSC_IDENTITY_AUTO_DISCOVERY=\"true\"; electron-builder --mac --x64 --arm64 -p always",
    "open": "open dist/mac/${npm_package_name}.app",
    "postinstall": "electron-builder install-app-deps"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "trailingComma": "all",
    "printWidth": 120
  },
  "build": {
    "extends": "electron-snowpack/config/electron-builder.js",
    "productName": "Captain",
    "files": [
      "**/*",
      "!.env",
      "!src/web/"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./public/Icon.icns"
    }
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/electron": "^1.6.10",
    "@types/electron-positioner": "^4.1.1",
    "@types/snowpack-env": "^2.3.4",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "electron-snowpack": "^0.13.0",
    "prettier": "^2.7.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "auto-launch-patched": "^5.0.2",
    "menubar": "^9.2.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
