{
  "private": true,
  "license": "UNLICENSED",
  "name": "captain",
  "version": "9.0.0",
  "description": "Docker menubar",
  "main": "src/backend/index",
  "author": "Rick Wong <tangos_erasure0x@icloud.com>",
  "scripts": {
    "preinstall": "git submodule update --init --recursive",
    "dev": "env NODE_ENV=development DEBUG=captain* tsc-watch --onSuccess 'electron -js-flags=\"--require=ts-node/register\" .'",
    "start": "env NODE_ENV=production DEBUG=captain* electron .",
    "prettier": "find ./ -type f \\( -iname \\*.js -o -iname \\*.json -o -iname \\*.ts -o -iname \\*.css \\) | grep -v logs/ | grep -v node_modules/ | xargs prettier --write",
    "typecheck": "tsc --noEmit --pretty",
    "package": "electron-osx-sign ./Captain-darwin-x64/Captain.app && rm -rf ./Captain-darwin-x64/Captain.dmg && env NODE_ENV=production appdmg ./dmg.json ./Captain-darwin-x64/Captain.dmg",
    "build": "npm prune && rm -rf ./Captain-darwin-x64/ && env NODE_ENV=production electron-packager . Captain --platform=darwin --arch=x64 --electron-version=1.5.0 --icon=resources/Icon.icns --no-prune --overwrite"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "trailingComma": "all",
    "printWidth": 120
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/electron": "^1.6.10",
    "electron-packager": "^15.5.1",
    "prettier": "^2.7.0",
    "tsc-watch": "^5.0.3"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "auto-launch-patched": "^5.0.2",
    "electron": "^19.0.4",
    "electron-lets-move": "^0.0.5",
    "electron-rpc": "^2.0.1",
    "menubar": "^9.2.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
